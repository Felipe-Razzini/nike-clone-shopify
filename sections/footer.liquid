<style>
  .footer-main {
    color: #707072;
    padding: 48px;
  }

  .footer-main p:not(.dropdown-link) {
    cursor: pointer;
  }

  .footer-sec-1 {
    margin-top: 20px;
    display: flex;
    justify-content: space-around;
  }

  .dropdown-link {
    color: #111111;
    margin-bottom: 24px;
  }

  .footer-links {
    display: flex;
    flex-direction: column;
    gap: 12px;
  }

  .footer-link {
    margin: 0;
  }

  .footer-sec-2 {
    margin-top: 72px;
    display: flex;
    justify-content: space-around;
  }

  .footer-sec-2 p {
    padding: 10px;
    margin: 0;
  }

  .footer-sec-2 p:hover {
    color: black;
  }

  @media (max-width: 992px) {
    .footer-links {
      width: 100%;
      border-bottom: 1px solid #7070723c;
    }

    .dropdown-link {
      padding-block: 24px;
      margin: 0;
      transition: transform 0.3s ease;
    }

    .dropdown-link:hover {
      cursor: pointer;
      transform: scale(1.05);
    }

    .footer-sec-1, .footer-sec-2 {
      justify-content: start;
      display: block;
    }

    .footer-link {
      display: none; /* Initially hide the dropdown content */
    }

    .footer-link.show {
      display: block;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const toggles = document.querySelectorAll('.dropdown-link');

    toggles.forEach(function(toggle) {
      toggle.addEventListener('click', function() {
        if (window.innerWidth <= 992) {
          // Find the parent container
          const parentContainer = this.closest('.footer-links');
          // Select all .footer-link elements within the parent container
          const footerLinks = parentContainer.querySelectorAll('.footer-link');

          // Toggle display for each .footer-link
          footerLinks.forEach(function(link) {
            link.classList.toggle('show');
          });
        }
      });
    });
  });
</script>

