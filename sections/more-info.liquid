<section class="more-info">
  <div class="more-info-wrapper">
    {% if section.settings.text != blank %}
      <h1>Our Turn</h1>
    {% else %}
      <h1>{{ section.settings.text }}</h1>
    {% endif %}

    {% if section.settings.text2 != blank %}
      <p>We're not waiting on history. We're making it.</p>
    {% else %}
      <h1>{{ section.settings.text2 }}</h1>
    {% endif %}

    <div class="buttons">
      <button>
        Let's Go
      </button>
      <button>
        Watch
      </button>
    </div>

  </div>

</section>

<style>
  .more-info {
    background: {{ section.settings.background }};
    color: {{ section.settings.text_color }};
    display: flex;
    justify-content: center;
    padding: 50px;
  }

  .more-info-wrapper {
    width: 500px;
    text-align: center;
    display: flex;
    flex-direction: column;
    gap: 15px;
  }

  .more-info-wrapper h1 {
    font-size: 50px;
    margin-block: 0;
  }

  .more-info-wrapper p {
    margin-block: 0;
  }

  .more-info-wrapper button {
    padding: 10px 20px 10px 20px;
    background-color: black;
    border: none;
    color: white;
    border-radius: 20px;
    cursor: pointer;
    font-size: 15px;
    font-weight: bold;
  }

  .more-info-wrapper button:hover {
    background-color: rgb(185, 185, 185);
  }

  .buttons {
    margin-top: 13px;
  }
</style>

{% schema %}
  {
    "name": "More-info",
    "settings": [
      {
        "type": "color",
        "id": "background",
        "label": "Background",
        "default": "#F7F7F7"
      }, {
        "type": "color",
        "id": "text_color",
        "label": "Text",
        "default": "#000000"
      }, {
        "type": "text",
        "id": "text",
        "label": "Text",
        "default": "default text"
      }, {
        "type": "text",
        "id": "text2",
        "label": "Text2",
        "default": "default text"
      }
    ],
    "presets": [
      {
        "name": "more-info"
      }
    ]
  }
{% endschema %}
