<section class="login-section">
  {% form 'customer_login' %}
    {{ form.errors | default_errors }}
    <h2>Sign in to your account.</h2>
    <div class="login-form">
      <div class="email">
        <input
          placeholder="email"

          type="email"
          name="customer[email]"
        >
      </div>

      <div class="password">
        <input
          type="password"
          name="customer[password]"
          placeholder="password"
        >
      </div>

      <div class="submit">
        <input type="submit" value="Sign in">
      </div>
    </div>
  {% endform %}
</section>

<style>
  .login-section {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100vh;
  }

  .login-section h2 {
    margin-bottom: 40px;
    font-size: 40px;
  }

  .login-form {
    background-color: white;
    text-align: center;
    width: 300px;
    height: 300px;
    margin: 0 auto;
    padding: 20px;
    border: 1px solid #ddd;
    border-radius: 8px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

  .login-form input {
    width: 100%;
    padding: 20px;
    margin-bottom: 16px;
    box-sizing: border-box;
    border: 1px solid #ccc;
    border-radius: 4px;
  }

  .login-form input[type='submit'] {
    background-color: black;
    color: #fff;
    font-weight: bold;
    font-size: 15px;
    cursor: pointer;
  }

  .login-form input[type='submit']:hover {
    background-color: #ccc;
    transform: scale(1.05);
    transition: 0.3s ease-in-out;
    color: black;
  }

  .login-form div {
    margin-bottom: 10px;
  }

  /* Media Queries */
  @media (max-width: 768px) {
    .login-section h2 {
      font-size: 32px;
    }

    .login-form {
      width: 90%;
      height: auto;
      padding: 10px;
    }

    .login-form input {
      padding: 15px;
    }
  }

  @media (max-width: 480px) {
    .login-section {
      height: auto;
      padding: 20px 0;
    }

    .login-section h2 {
      margin-bottom: 20px;
      font-size: 24px;
    }

    .login-form {
      box-shadow: none;
    }
  }
</style>

{% schema %}
{
  "name": "login"
}
{% endschema %}
