<section class="product-main">
  <div class="product-main-wrapper">
    <img
      width="396"
      height="465"
      loading="lazy"
      src="{{ product.featured_image | image_url }}"
      alt="{{ product.title}}"
      class="product-image"
    >
    <div class="product-description">
      <h2>{{ product.title }}</h2>
      <p>{{ product.price | money }}</p>
      <p>{{ product.description }}</p>
      <h3>Select Size</h3>
      {% form 'product', product %}
        <select name="id">
          {% for variant in product.variants %}
            <option value="{{ variant.id }}">
              {{ variant.title }}
            </option>
          {% endfor %}
        </select>
        <button type="submit">Add to Cart</button>
      {% endform %}
    </div>
  </div>
</section>

<style>
  .product-main {
    color: {{ section.settings.text_color }};
    padding: 30px;
  }

  .product-main-wrapper {
    display: flex;
    gap: 20px;
    justify-content: center;
  }

  .product-description button {
    display: block;
    margin-top: 20px;
    padding: 15px 20px;
    border: none;
    border-radius: 8px;
    background-color: black;
    color: white;
    font-weight: bold;
    font-size: 15px;
  }

  .product-main-wrapper > .product-image {
    flex: 0 1 50%;
    max-width: 100%;
    height: auto;
    object-fit: contain;
    border-radius: 8px;
}

  .product-main-wrapper > div:last-child {
      flex: 0 1 50%;
  }

  @media (max-width: 768px) {
    .product-main-wrapper {
      flex-direction: column;
    }
  }
</style>

{% schema %}
  {
    "name": "Product-main",
    "settings": [
      {
        "type": "color",
        "id": "background",
        "label": "Background",
        "default": "#F7F7F7"
      }, {
        "type": "color",
        "id": "text_color",
        "label": "Text",
        "default": "#000000"
      }
    ],
    "presets": [
      {
        "name": "product-main"
      }
    ]
  }
  {% endschema %}
